{
    "extends": [
        "eslint:recommended",
        "jquery"
    ],
    "plugins": [],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "ignorePatterns": ["site/ol/ol.js"],
    "globals": {
        "$": true,
        "ol": true,
        "geolib": true
    },
    "rules": {
        "linebreak-style": ["off"],
        "space-in-parens": ["off"],
        "quates": ["off"],
        "semi": ["off"],
        "max-len": ["off"],
        "brace-style": ["off"],
        "no-trailing-spaces": ["off"],
        "quotes": ["off"],
        "computed-property-spacing": ["off"],
        "keyword-spacing": ["off"],
        "no-extra-semi": ["off"],
        "space-infix-ops": ["off"],
        "lines-around-comment": ["off"],
        "comma-dangle": ["off"],
        "array-bracket-spacing": ["off"],
        "no-unused-vars": ["off"],
        "object-curly-spacing": ["off"],
        "space-unary-ops": ["off"],
        "space-before-blocks": ["off"]
    }
}
