{
    "extends": [
        "eslint:recommended"
    ],
    "plugins": [],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "ignorePatterns": ["site/ol/ol.js"],
    "globals": {
        "ol": true,
        "geolib": true
    },
    "rules": {
        "linebreak-style": ["off"],
        "space-in-parens": ["off"],
        "max-len": ["off"],
        "brace-style": ["off"],
        "computed-property-spacing": ["off"],
        "lines-around-comment": ["off"],
        "comma-dangle": ["off"],
        "array-bracket-spacing": ["off"],
        "object-curly-spacing": ["off"],
        "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}]
    }
}
